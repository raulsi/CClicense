{
  "manifest_version": 2,

  "name": "CCLicense",
  "description": " Detect the creative commons license!",
  "version": "0.2",
  "background" : {
    "scripts": ["background.js","jquery.js"],
    "persistent": false
  },
  "icons": { 	
  			"16": "cc16.png",
  			"19": "cc19.png",
           	"48": "cc48.png",
          	"128": "cc128.png" 
          	},
  "permissions": ["tabs","*://*/*"],
  "page_action" :
  {
     "default_icon": {             
            "19": "cc19.png",    
            "48": "cc38.png"     
      },
      "default_title": "Creative Commons",   
      "default_popup": "popup.html"
  },
   "content_scripts" : [{
        "matches" : [ "*://*/*","file:///*:/*"],
        "js" : ["content.js"]
    }]

}